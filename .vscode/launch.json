{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api-service/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api-service",
            "env": {
                "AEROSPIKE_HOST": "localhost",
                "AEROSPIKE_PORT": "3000"
            },
            "args": ["--host", "0.0.0.0", "--port", "8100"],
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug Training Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/training-service/train.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/training-service",
            "env": {
                "AEROSPIKE_HOST": "localhost",
                "AEROSPIKE_PORT": "3000"
            },
            "args": [],
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug API Service (Docker Ports)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api-service/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api-service",
            "env": {
                "AEROSPIKE_HOST": "localhost",
                "AEROSPIKE_PORT": "3000"
            },
            "args": ["--host", "0.0.0.0", "--port", "8000"],
            "justMyCode": true,
            "stopOnEntry": false
        }
    ]
}
